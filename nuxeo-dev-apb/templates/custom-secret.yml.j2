---
apiVersion: v1
kind: Secret
type: Opaque
metadata:
  labels:
    app: {{ app_name }}
    apb_name: '{{ apb_name }}'
    apb_plan_id: '{{ _apb_plan_id }}'
    apb_service_class_id: '{{ _apb_service_class_id }}'
    apb_service_instance_id: '{{ _apb_service_instance_id }}'
    component: {{ component }}
  name: "{{ custom_secret_name }}-{{ item }}"
  namespace: {{ namespace }}
stringData:
  {% for key, value in custom_secret.items() -%}
  {{ key }}: {{ value }}
  {% endfor -%}
